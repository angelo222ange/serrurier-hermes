# Headers pour Netlify/Vercel - Optimisation performance mobile

# Cache des assets statiques (images, fonts, CSS, JS)
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages (1 heure)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Preload critical resources
/
  Link: </images/logos/serrurier-hermes-logo.webp>; rel=preload; as=image
  Link: </_next/static/css/*>; rel=preload; as=style
